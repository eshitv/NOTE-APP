//JAVASCRIPT
showNote();


let addBtn = document.getElementById('addbtn');
addBtn.addEventListener("click", function(e) {

    let addText = document.getElementById("addtext");
    let note = localStorage.getItem("note");
    if (note == null) {
        noteObj = [];
    } else {
        noteObj = JSON.parse(note);
    }

    noteObj.push(addText.value);
    localStorage.setItem("note", JSON.stringify(noteObj));
    addText.value = " ";
    console.log(noteObj);
    showNote();

});

function showNote() {
    let note = localStorage.getItem("note");
    if (note == null) {
        noteObj = [];
    } else {
        noteObj = JSON.parse(note);
    }

    let html = " ";
    noteObj.forEach(function(element, index) {
        html += `
        <div class=" car my-2 mx-2 card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"> Card ${index + 1}</h5>
            <p class="card-text">${element}</p>
            <button id = "${index}" onclick = "delNote(this.ad)"  class="btn btn-primary">Delete Note</button>
        </div>
    </div>`;

    });

    let ele = document.getElementById("note");
    if (noteObj.length != 0) {
        ele.innerHTML = html;

    } else {

        noteObj.innerHTML = "nothing to show";
    }
}

function delNote(index) {
    console.log("Delete", index);

    let note = localStorage.getItem("note");
    if (note == null) {
        noteObj = [];
    } else {
        noteObj = JSON.parse(note);
    }
    noteObj.splice(index, 1);
    localStorage.setItem("note", JSON.stringify(noteObj));
    showNote();
}

let search = document.getElementById("sea");
search.addEventListener("input", function() {
    let inval = search.value.toLowerCase();
    console.log("input", inval);

    let val = document.getElementsByClassName("car");
    Array.from(val).forEach(function(element) {
        let card = element.getElementsByTagName("p")[0].innerText;
        console.log(card);
        if (card.includes(inval)) {
            element.style.display = "block";
        } else {
            element.style.display = "none";
        }
    });

});
